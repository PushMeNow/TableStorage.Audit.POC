@{
    this.AddTitle("Users");
}

<div>
    <div class="row justify-content-between">
        <div class="col"></div>
        <div class="col justify-content-end d-flex">
            <button class="btn btn-primary" id="add-user" data-bs-toggle="modal" data-bs-target="#user-modal-window">Add</button>
        </div>
    </div>
    <div class="row">
        <table id="users-table" class="table-striped table-hover table-bordered" style="width: 100%">
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="user-modal-window">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @{ await Html.RenderPartialAsync("_UserForm"); }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @* <button type="button" class="btn btn-primary">Save changes</button> *@
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="js/users-table.js"></script>
}